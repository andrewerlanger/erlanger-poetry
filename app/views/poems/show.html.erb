<% photo_string = "https://picsum.photos/#{rand(600..800)}/#{rand(600..800)}" %>
<div class="add-space"></div>
<div class="poem-container">

  <!-- IMAGE -->
  <div class="poem-header" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.3) 50%), url(<%= photo_string %>);">
  </div>

  <!-- TEXT -->
  <div class="poem-text">
    <h2><%= @poem.title %></h2>
    <p><strong class="date"><%= @poem.humanize_date %></strong></p>
    <br>
    <% lines = @poem.body.split("\n") %>
    <% lines.each do |line| %>
      <p><%= line %></p>
    <% end %>
    <br>
    <%= link_to "Back to all poems â†’", poems_path, class: 'backlink'  %>
  </div>

</div>

<div class="add-space"></div>

